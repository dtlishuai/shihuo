<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseTheme">
        <!--<item name="actionSheetStyle">@style/ActionSheetStyleiOS6</item>-->
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <!--基类-->
    <style name="lib_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabbar_button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_main_tab_font</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="me_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/me_header_btn_layout_height</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--&lt;!&ndash;新增地址每条的样式&ndash;&gt;-->
    <style name="add_address_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="line_style_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="style_edittex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shoplocated_edit_height</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>


    <!-- 垂直分割线 -->
    <style name="style_divider_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- 水平分割线 -->
    <style name="style_divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- fresco图片基类style-->
    <style name="lib_style_fresco_base" parent="lib_style_base">
        <item name="actualImageScaleType">fitCenter</item>
        <item name="failureImageScaleType">fitCenter</item>
        <item name="progressBarImageScaleType">centerCrop</item>
        <item name="failureImage">@color/divider</item>
        <item name="placeholderImage">@color/divider</item>
    </style>
    <!--圆形 fresco base style-->
    <style name="lib_style_fresco_base_circle" parent="lib_style_fresco_base">
        <item name="roundAsCircle">true</item>
    </style>
    <!--矩形 fresco base style-->
    <style name="lib_style_fresco_base_normal" parent="lib_style_fresco_base">
        <item name="roundAsCircle">false</item>
    </style>

    <!-- Text styles -->
    <style name="Style_TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Style_TextViewXListViewFoot" parent="Style_TextViewDefault">
        <item name="android:textColor">@color/color_font4</item>
        <item name="android:textSize">@dimen/font_size4</item>
    </style>

    <style name="Style_TextViewListEmpty_View" parent="Style_TextViewDefault">
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">#7a7a7a</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 提交按钮 -->
    <style name="style_btn_commit" parent="lib_style_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/selector_green_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:text">@string/commit</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
