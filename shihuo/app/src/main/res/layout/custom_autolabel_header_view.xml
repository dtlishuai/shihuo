<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autolabel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_syssecond_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="商品分类"
            android:textColor="@color/common_font_gray"
            android:textSize="@dimen/h5" />

        <com.shihuo.shihuo.Views.autolabel.CustomAutoLabelTypeUi
            android:id="@+id/label_view_syssecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            autolabel:icon_cross="@drawable/cross"
            autolabel:label_background_res="@drawable/autolabel_bg_normal"
            autolabel:label_background_res_checked="@drawable/autolabel_bg_checked"
            autolabel:label_clickable="true"
            autolabel:label_padding="5dp"
            autolabel:max_labels="10"
            autolabel:show_cross="false"
            autolabel:text_color="@color/common_font_black"
            autolabel:text_size="@dimen/label_title_size" />
    </LinearLayout>

    <View style="@style/style_divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_store_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="推荐店铺"
            android:textColor="@color/common_font_gray"
            android:textSize="@dimen/h5" />

        <com.shihuo.shihuo.Views.autolabel.CustomAutoLabelStoreUi
            android:id="@+id/label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            autolabel:icon_cross="@drawable/cross"
            autolabel:label_background_res="@drawable/autolabel_bg_normal"
            autolabel:label_background_res_checked="@drawable/autolabel_bg_checked"
            autolabel:label_clickable="true"
            autolabel:label_padding="5dp"
            autolabel:max_labels="10"
            autolabel:show_cross="false"
            autolabel:text_color="@color/common_font_black"
            autolabel:text_size="@dimen/label_title_size" />
    </LinearLayout>

</LinearLayout>