<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/titlebar_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/titlebar_padding">


        <ImageButton
            android:id="@+id/btn_msg"
            android:layout_width="@dimen/titlebar_btn_width"
            android:layout_height="@dimen/titlebar_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/tools_unselected" />

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="@dimen/titlebar_btn_width"
            android:layout_height="@dimen/titlebar_btn_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/btn_msg"
            android:layout_toStartOf="@+id/btn_msg"
            android:background="@mipmap/tools_unselected" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/searchbar_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/btn_more"
            android:background="@drawable/search_bar_edittext_bg"
            android:gravity="center_vertical"
            android:hint="@string/search_hint_text"
            android:paddingLeft="5dp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/h5" />
    </RelativeLayout>

    <com.chanven.lib.cptr.PtrClassicFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <com.chanven.lib.cptr.loadmore.GridViewWithHeaderAndFooter
            android:id="@+id/rotate_header_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:fadingEdge="none"
            android:focusable="false"
            android:horizontalSpacing="10dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth" />
    </com.chanven.lib.cptr.PtrClassicFrameLayout>

</LinearLayout>