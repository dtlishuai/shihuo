<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />
    <!--修改密码-->
    <RelativeLayout
        android:id="@+id/layout_service_phone"
        style="@style/me_item_style"
        android:layout_below="@id/title_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="客服电话: 0359-6363375"
            android:textSize="@dimen/h5" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

    <View
        style="@style/style_divider_horizontal"
        android:layout_alignParentTop="true" />

    <!--修改密码-->
    <RelativeLayout
        android:id="@+id/layout_complaint_phone"
        style="@style/me_item_style"
        android:layout_below="@id/title_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="投诉电话: 18634598543"
            android:textSize="@dimen/h5" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

    <View
        style="@style/style_divider_horizontal"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/layout_html_1"
        style="@style/me_item_style"
        android:layout_below="@id/title_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="第三方资费说明"
            android:textSize="@dimen/h5" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

    <View
        style="@style/style_divider_horizontal"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/layout_html_2"
        style="@style/me_item_style"
        android:layout_below="@id/title_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="第三方配送服务合同"
            android:textSize="@dimen/h5" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arrow" />

    </RelativeLayout>

    <View
        style="@style/style_divider_horizontal"
        android:layout_alignParentTop="true" />
</LinearLayout>