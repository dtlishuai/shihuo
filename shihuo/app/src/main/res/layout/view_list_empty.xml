<?xml version="1.0" encoding="utf-8"?>
<com.shihuo.shihuo.Views.EmptyView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_list_empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg2"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.shihuo.shihuo.Views.ProgressImageView
            android:id="@+id/view_list_empty_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/loading_dark" />

        <TextView
            android:id="@+id/view_list_empty_text"
            style="@style/Style_TextViewListEmpty_View"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:visibility="gone" />
    </LinearLayout>

    <ViewStub
        android:id="@+id/newtwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout="@layout/network_not_good" />

    <FrameLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" />

</com.shihuo.shihuo.Views.EmptyView>