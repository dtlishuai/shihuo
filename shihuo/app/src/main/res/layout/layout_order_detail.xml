<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_bg">

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_red_dark"
        android:text="确认收货"
        android:textColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_confirm"
        android:layout_below="@id/title_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/icon_shop_fav"
                    android:drawablePadding="5dp"
                    android:text="待收货"
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@+id/text_default_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="七天以内为默认收货"
                    android:textSize="@dimen/h6" />

            </LinearLayout>

            <View style="@style/style_divider_horizontal" />

            <View
                style="@style/style_divider_horizontal"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_consignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="收货人"
                    android:textSize="@dimen/h5" />

                <View style="@style/style_divider_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@mipmap/icon_my_address"
                        android:drawablePadding="5dp"
                        android:text="杨先生"
                        android:textSize="@dimen/h5" />

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="18776387362"
                        android:textSize="@dimen/h5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:text="北京市海淀区某小区"
                    android:textSize="@dimen/h5" />

                <View style="@style/style_divider_horizontal" />
            </LinearLayout>

            <View
                style="@style/style_divider_horizontal"
                android:layout_marginTop="10dp" />
            <!--购买的商品的布局-->
            <LinearLayout
                android:id="@+id/layout_goods"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="vertical">

            </LinearLayout>

            <View style="@style/style_divider_horizontal" />

            <View
                style="@style/style_divider_horizontal"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品金额："
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥：159.00"
                    android:textSize="@dimen/h5" />
            </RelativeLayout>

            <View style="@style/style_divider_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付金额："
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@+id/text_payprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥：159.00"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/h5" />
            </RelativeLayout>

            <View style="@style/style_divider_horizontal" />

            <View
                style="@style/style_divider_horizontal"
                android:layout_marginTop="10dp" />
            <!--配送方式-->
            <TextView
                android:id="@+id/text_deliver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="配送方式：物流配送（同城3元）"
                android:textSize="@dimen/h5" />

            <View style="@style/style_divider_horizontal" />
            <!--快递名称-->
            <TextView
                android:id="@+id/text_deliver_commpany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="申通快递：73923923992339"
                android:textSize="@dimen/h5" />

            <View style="@style/style_divider_horizontal" />


            <LinearLayout
                android:id="@+id/layout_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View style="@style/style_divider_horizontal" />

                <TextView
                    android:id="@+id/text_order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:text="订单号：73923923992339"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/text_order_createtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:text="订单创建时间：73923923992339"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/text_order_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:text="订单创建时间：73923923992339"
                    android:textSize="@dimen/h6" />

                <View style="@style/style_divider_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>